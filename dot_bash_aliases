## shell
alias reload='exec $SHELL -l'

# modern cli tools
## ls, tree to exa
if [ "$(command -v exa)" ]; then
  alias exa='exa -a -h -g'
  alias ls='exa -a -h -g'
  alias tree='exa --tree'
fi
## cat, less to bat
if [ "$(command -v bat)" ]; then
  alias cat='bat --paging=never'
  alias less='bat --paging=always'
fi
## cd to z
if [ "$(command -v zoxide)" ]; then
  alias ..='z ..'
  alias ...='z ../..'
  alias ....='z ../../..'
  alias .....='z ../../../..'
  alias c='z'
  # alias cd='z'  enhancd uses cd
fi
