#!/bin/sh
#
# shell bundler.
# concats sh/bash files to stdout, with cut shebang and ./source directives.
# This is argument order sensitive. Input in consideration of loading shell.


if [ $# -lt 1 ]; then
  echo "error: argument is empty." >&2
  return 1
fi
for i; do
  if [ ! -e "$i" ]; then
    echo "error: $i not found." >&2
    return 2
  fi
done
for i; do
  < "$i" sed \
  -e 's/^#!\/[^ ]*\/\(ba\|\)sh\( *\)//' \
  -e 's/^#!\/[^ ]*\/env.*$//' \
  -e 's/^\(\.\|source\) .*$//'
  echo ""
done


